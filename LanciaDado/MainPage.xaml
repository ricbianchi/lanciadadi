<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LanciaDado.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="&#10;Dado elettronico!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center" Orientation="Horizontal">
            <Image x:Name="DadoUno" Scale="2.5" />
            <Image x:Name="DadoDue" Scale="2.5" />
        </StackLayout>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
            <StackLayout Orientation="Horizontal">
                <CheckBox x:Name="DueDadi"/>
                <Label Text="Doppio dado" VerticalTextAlignment="Center"/>
            </StackLayout>
            
            <Button Text="Lancia" BackgroundColor="#2196F3" TextColor="White" WidthRequest="80" Clicked="Lancia_Clicked"/>
        </StackLayout>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
            <Label x:Name="Percentuali"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
